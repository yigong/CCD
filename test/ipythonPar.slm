#!/bin/bash -I
#
# Job name:
#SBATCH --job-name=ipyPar&
#
# Account:
#SBATCH  --account=ac_etci
#
# Partition
#SBATCH --partition=lr2
#
# QoS:
#SBATCH --qos=lr_debug
#
# Processors:
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=12
#
# Wall clock limit:
#SBATCH --time=0:30:00
#
# Mail type:
#SBATCH --mail-type=all
#
# Mail user:
#SBATCH --mail-user=ygzhang@lbl.gov
#

testDir=/global/scratch/ygzhang/PyBeamDiag/test
cd $testDir
ipcluster start -n 4 &
ipython ipythonPar.py

FAIL=0
for job in `jobs -p`
do
echo $job
    wait $job || let "FAIL+=1"
done

echo $FAIL

if [ "$FAIL" == "0" ];
then
echo "YAY!"
else
echo "FAIL! ($FAIL)"
fi
