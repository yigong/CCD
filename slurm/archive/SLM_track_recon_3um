#!/bin/bash -I
#
# Job name:
#SBATCH --job-name=TrkRecon3um
#
# Error file:
#SBATCH --error=ERR_track_recon_3um
#
# Account:
#SBATCH  --account=ac_etci
#
# Partition
#SBATCH --partition=lr3
#
# QoS:
#SBATCH --qos=lr_debug
#
# Processors:
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=16
#
# Wall clock limit:
#SBATCH --time=00:30:00
#
# Mail type:
#SBATCH --mail-type=all
#
# Mail user:
#SBATCH --mail-user=ygzhang@lbl.gov
#
module load matlab
MatlabDir=/global/scratch/ygzhang/PyBeamDiag/matlab
cd $MatlabDir
matlab -nodisplay -nosplash -r "RECON_3um"

FAIL=0
for job in `jobs -p`
do
echo $job
    wait $job || let "FAIL+=1"
done

echo $FAIL

if [ "$FAIL" == "0" ];
then
echo "YAY!"
else
echo "FAIL! ($FAIL)"
fi
