#!/bin/bash -I
#
# Job name:
#SBATCH --job-name=PSF60nm
#
# Error file:
#SBATCH --error=ERR_PSF_window_60nm
#
# Account:
#SBATCH  --account=ac_etci
#
# Partition
#SBATCH --partition=lr3
#
# QoS:
#SBATCH --qos=lr_normal
#
# Processors:
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=16
#
# Wall clock limit:
#SBATCH --time=10:30:00
#
# Mail type:
#SBATCH --mail-type=all
#
# Mail user:
#SBATCH --mail-user=ygzhang@lbl.gov
#

MatlabDir=/global/scratch/ygzhang/PyBeamDiag/matlab
cd $MatlabDir
matlab -nodisplay -nosplash -r "TRACK_recon_60nm"

PyBeamDiagDir=/global/scratch/ygzhang/PyBeamDiag
cd $PyBeamDiagDir
python PSF_window_60nm.py

FAIL=n
for job in `jobs -p`
do
echo $job
    wait $job || let "FAIL+=1"
done

echo $FAIL

if [ "$FAIL" == "0" ];
then
echo "YAY!"
else
echo "FAIL! ($FAIL)"
fi
