#!/bin/bash -I
#
# Job name:
#SBATCH --job-name=mat
#
# Account:
#SBATCH  --account=ac_etci
#
# Partition
#SBATCH --partition=lr3
#
# QoS:
#SBATCH --qos=lr_debug
#
# Processors:
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=16
#
# Wall clock limit:
#SBATCH --time=00:30:00
#
# Mail type:
#SBATCH --mail-type=all
#
# Mail user:
#SBATCH --mail-user=ygzhang@lbl.gov
#

matOutDir=/global/scratch/ygzhang/PyBeamDiag/data/scatter
PyBeamDiagDir=/global/scratch/ygzhang/PyBeamDiag

cd $PyBeamDiagDir
python SCATTER_matrl.py $matOutDir

echo 'Done'

FAIL=0
for job in `jobs -p`
do
echo $job
    wait $job || let "FAIL+=1"
done

echo $FAIL

if [ "$FAIL" == "0" ];
then
echo "YAY!"
else
echo "FAIL! ($FAIL)"
fi
